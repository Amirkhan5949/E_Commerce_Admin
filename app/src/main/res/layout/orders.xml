<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="@color/white"
    android:id="@+id/order_layout"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <View
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_marginHorizontal="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:maxLines="1"
            android:ellipsize="end"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Order #86"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:textSize="14sp"
            android:id="@+id/tv_orderid"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cash on delivery:"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:id="@+id/tv_cod"
            android:textSize="14sp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$12345"
            android:textColor="@color/black"
            android:fontFamily="@font/bold"
            android:textSize="14sp"
            android:id="@+id/tv_order_rs"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginHorizontal="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date:29-oct-2020 12:00 pm"
        android:id="@+id/tv_time"
        android:textSize="14sp" />

    <View
        android:layout_marginVertical="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="16dp"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/woman"
            android:id="@+id/iv_image"/>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:ellipsize="end"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Ultimate Dress"
                        android:textColor="@color/colorBlack"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:id="@+id/tv_name"/>

                    <TextView
                        android:layout_marginRight="20dp"
                        android:ellipsize="end"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Status"
                        android:textColor="@color/colorDarkblue"
                        android:textSize="16sp"
                        android:maxLines="1"
                        android:id="@+id/tv_status"/>


                </LinearLayout>




                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/tv_description"/>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Color:"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:id="@+id/color"/>

                    <androidx.cardview.widget.CardView
                        android:layout_marginLeft="2dp"
                        android:layout_width="wrap_content"
                        app:cardCornerRadius="4dp"
                        android:layout_height="wrap_content">

                        <View
                            android:id="@+id/colorview"
                            android:layout_width="14dp"
                            android:layout_height="14dp"
                            android:background="@color/colorDarkblue"/>
                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:id="@+id/tv_size"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:maxLines="1"
                        android:text="Size:M"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp" />

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Qty:1"
                        android:textColor="@color/colorBlack"
                        android:textSize="12sp"
                        android:maxLines="1"
                        android:id="@+id/tv_quantity"/>



                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginVertical="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$20.00"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tv_sellingp"/>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="10dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$30.00"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/tv_mrp"
                        tools:ignore="MissingConstraints" />


                    <View
                        android:background="#000000"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_mrp"
                        app:layout_constraintStart_toStartOf="@+id/tv_mrp"
                        app:layout_constraintEnd_toEndOf="@+id/tv_mrp"
                        app:layout_constraintTop_toTopOf="@+id/tv_mrp"
                        tools:ignore="MissingConstraints" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="70%off"
                    android:textSize="12sp"
                    android:textColor="@color/colorDarkblue"
                    android:id="@+id/tv_off"
                    tools:ignore="MissingConstraints" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>

    <LinearLayout
        android:layout_marginHorizontal="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



        <TextView
            android:padding="12dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Help"
            android:textColor="@color/colorDarkblue"
            android:textSize="14sp"
            android:id="@+id/tv_help"/>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/dark_gray"/>

        <TextView
            android:padding="12dp"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/red"
            android:textSize="14sp"
            android:id="@+id/tv_cancel"/>


    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/dark_gray"/>



</LinearLayout>