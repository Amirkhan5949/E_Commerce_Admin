<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    android:id="@+id/drawer"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DashBoardActivity">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar">

            <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/AppTheme"
                android:id="@+id/toolbar">

            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/app_bar"
                app:elevation="1dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fitsSystemWindows="true">

                <com.google.android.material.appbar.CollapsingToolbarLayout
                    android:background="@color/background"
                    android:id="@+id/toolbar_layout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fitsSystemWindows="true"
                    app:contentScrim="@color/white"
                    app:layout_scrollFlags="scroll|exitUntilCollapsed">

                    <LinearLayout
                        app:layout_collapseMode="parallax"
                        app:layout_collapseParallaxMultiplier="0.5"
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                android:layout_margin="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/dashboard_gradient_1">

                                    <ImageView
                                        android:layout_marginLeft="10dp"
                                        android:layout_gravity="center"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/total_busness"
                                        app:tint="@color/white" />

                                    <LinearLayout
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/bold"
                                            android:text="$20"
                                            android:id="@+id/tv_totalno"
                                            android:textColor="@color/white"
                                            />

                                        <TextView
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="Total Business"
                                            android:textColor="@color/white"
                                            />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginVertical="10dp"
                                android:layout_marginRight="10dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/dashboard_gradient_2">

                                    <ImageView
                                        android:layout_marginLeft="10dp"
                                        android:layout_gravity="center"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/pending"
                                        app:tint="@color/white" />

                                    <LinearLayout
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/bold"
                                            android:id="@+id/tv_inactiveno"
                                            android:text="$20"
                                            android:textColor="@color/white"
                                            />

                                        <TextView
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="INACTIVE PRODUCTS"
                                            android:textColor="@color/white"
                                            />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginHorizontal="10dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/dashboard_gradient_3">

                                    <ImageView
                                        android:layout_marginLeft="10dp"
                                        android:layout_gravity="center"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/appruved"
                                        app:tint="@color/white" />

                                    <LinearLayout
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/bold"
                                            android:text="$20"
                                            android:id="@+id/tv_approvedno"
                                            android:textColor="@color/white"
                                            />

                                        <TextView
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="APPROVED PRODUCTS"
                                            android:textColor="@color/white"
                                            />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>
                            <androidx.cardview.widget.CardView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="100dp"
                                app:cardCornerRadius="10dp"
                                android:layout_marginRight="10dp"
                                >

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/dashboard_gradient_4">

                                    <ImageView
                                        android:layout_marginLeft="10dp"
                                        android:layout_gravity="center"
                                        android:layout_width="40dp"
                                        android:layout_height="40dp"
                                        android:src="@drawable/inactive"
                                        app:tint="@color/white" />

                                    <LinearLayout
                                        android:layout_marginHorizontal="5dp"
                                        android:layout_gravity="center"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="16sp"
                                            android:fontFamily="@font/bold"
                                            android:id="@+id/tv_pendingno"
                                            android:text="$20"
                                            android:textColor="@color/white"
                                            />

                                        <TextView
                                            android:ellipsize="end"
                                            android:maxLines="1"
                                            android:layout_gravity="center"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:textSize="12sp"
                                            android:text="PENDING PRODUCTS"
                                            android:textColor="@color/white"
                                            />

                                    </LinearLayout>

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>


                        </LinearLayout>




                    </LinearLayout>

                </com.google.android.material.appbar.CollapsingToolbarLayout>
            </com.google.android.material.appbar.AppBarLayout>



            <RelativeLayout
                android:background="@color/background"
                app:layout_behavior="@string/appbar_scrolling_view_behavior"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginBottom="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/rv_order"/>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_NoProductFound"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:layout_marginRight="30dp"
                    android:layout_marginLeft="30dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:textColor="@color/green"
                    android:text="No product found" />

                <ProgressBar
                    app:layout_anchorGravity="center"
                    android:layout_centerHorizontal="true"
                    android:elevation="200dp"
                    android:indeterminateTint="@color/green"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="200dp"
                    android:id="@+id/loader"/>


            </RelativeLayout>





        </androidx.coordinatorlayout.widget.CoordinatorLayout>



    </LinearLayout>




    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigation"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/mainfile" />



</androidx.drawerlayout.widget.DrawerLayout>